@model IEnumerable<Anntgc00492University.Model.Models.Enrollment>

@{
    ViewBag.Title = "Index";
    ViewBag.ManagedObject = "Enrollments";
    ViewBag.ManagedAction = "List";
}

<div class="col-xs-12">
    <!-- /.box -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">You can manipulate all enrollment records here !</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-md-3">
                        @Html.ActionLink("Create New", "Create")
                    </div>

                    <div class="row">
                        <div class="col-sm-12 table-responsive">
                            <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                <thead>
                                    <tr>
                                        <th>
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Course.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Student.FirstMidName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Grade)
                                        </th>
                                        <th>Task</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Course.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Student.FirstMidName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Grade)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
