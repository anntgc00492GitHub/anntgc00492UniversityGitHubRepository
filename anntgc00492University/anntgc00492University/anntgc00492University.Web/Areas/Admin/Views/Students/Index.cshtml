@model PagedList.IPagedList<Anntgc00492University.Model.Models.Student>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    ViewBag.ManagedObject = "Student";
    ViewBag.ManagedAction = "List";
}

<div class="col-xs-12">
    <!-- /.box -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">You can manipulate all student records here !</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="row">
                    <div class="col-md-3">
                        <br/>
                        <a href="~/Admin/Students/Create" class="btn btn-primary">Add new</a>
                    </div>
                    <div class="col-sm-7" style="margin-top:10px">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                @using (Html.BeginForm("Index", "Students", FormMethod.Get))
                                {
                                    <div class="form-inline">
                                        <div class="form-group">
                                            <select name="filter" class="form-control">
                                                <option value=null>Filter Enrollment Status</option>
                                                @foreach (SelectListItem option in ViewBag.CurrentFilteredListWithSelectedItem)
                                                {
                                                    <option value="@option.Value" @(option.Selected ? "selected='selected'" : "")> @option.Text</option>
                                                    if (option.Selected)
                                                    {
                                                        ViewBag.CurrentlySelectedFilter = option.Value;
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" type="text" name="searchString" value="@ViewBag.CurrentSearchString" placeholder="search text..." />
                                        </div>
                                        <input type="submit" class="btn btn-default" value="submit" />
                                    </div>
                                }                               
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-12 table-responsive">
                            <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                <thead>
                                <tr role="row">
                                    <th>
                                        @Html.ActionLink("Id", "Index",
                                            new
                                            {
                                                sortOrderParam = ViewBag.IdSortParm,
                                                currentlySelectedFilterParam = ViewBag.CurrentlySelectedFilter,
                                                currentSearchStringParam = ViewBag.CurrentSearchString
                                            }
                                        )
                                    </th>
                                    <th>
                                        @Html.ActionLink("FirstName", "Index",
                                            new
                                            {
                                                sortOrderParam = ViewBag.FirstNameSortParm,
                                                currentlySelectedFilterParam = ViewBag.CurrentlySelectedFilter,
                                                currentSearchStringParam = ViewBag.CurrentSearchString
                                            }
                                            )
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        @Html.ActionLink("EnrollmentDate", "Index",
                                            new
                                            {
                                                sortOrderParam = ViewBag.EnrollmentDateSortParm,
                                                currentlySelectedFilterParam = ViewBag.CurrentlySelectedFilter,
                                                currentSearchStringParam = ViewBag.CurrentSearchString
                                            }
                                            )
                                    </th>
                                    <th>Tasks</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstMidName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EnrollmentDate)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new {id = item.ID}) |
                                            @Html.ActionLink("Details", "Details", new {id = item.ID}) |
                                            @Html.ActionLink("Delete", "Delete", new {id = item.ID})
                                        </td>
                                    </tr>
                                }
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <div class="row" style="padding:30px">
                        <div class="col-sm-4">
                            <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                @Html.PagedListPager(
                                    Model,
                                    page => Url.Action("Index",
                                            new
                                            {
                                                page,
                                                sortOrderParam = ViewBag.CurrentSort,
                                                currentlySelectedFilterParam = ViewBag.CurrentlySelectedFilter,
                                                currentSearchStringParam = ViewBag.CurrentSearchString
                                            }
                                        )
                                    )
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
